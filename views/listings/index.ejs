<% layout("/layouts/boilerplate") %>

<body>
  <h3>All Listings</h3>

  <!-- Card layout for different screen sizes: 3 columns on large, 2 on medium, 1 on small -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

    <!-- Loop through all listings and display each one as a card -->
    <% for (let listing of allListings) { %>
      <a class="listing-link" href="/listings/<%= listing._id %>">
        <div class="card col">

          <!-- Listing Image -->
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="listing_image" 
            style="height: 20rem;"
          />

          <!-- Image Overlay (optional for text or effects on image) -->
          <div class="card-img-overlay"></div>

          <!-- Card Content -->
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <!-- &#8377 is the HTML entity for Indian Rupee symbol -->
            </p>
          </div>
          
        </div>
      </a>
    <% } %>

  </div>
</body>
